# PyScaff Environment Configuration Template
# Copy this file to .env and update values for your environment

# Database Connection
# Format: postgresql+psycopg://user:password@host:port/database
# For development, you can use SQLite: sqlite:///./app.db
DATABASE_URL=postgresql+psycopg://app:app@localhost:5432/app

# AI Provider Configuration
# Options: mock | openai
# Use 'mock' for development/testing, 'openai' for production
AI_PROVIDER=mock

# OpenAI API Key
# Required only if AI_PROVIDER=openai
# Obtain from https://platform.openai.com/api-keys
OPENAI_API_KEY=sk-...

# OpenTelemetry Exporter Endpoint
# Endpoint for OTEL collector to send traces and logs
# Default for local development with docker-compose
OTEL_EXPORTER_OTLP_ENDPOINT=http://localhost:4317

# JWT Secret
# Used for API authentication (internal only for MVID)
# IMPORTANT: Use a secure random string in production (e.g., openssl rand -hex 32)
JWT_SECRET=dev-only-not-for-prod

# Logging Level
# Options: DEBUG | INFO | WARNING | ERROR
# Use DEBUG for development, INFO or WARNING for production
LOG_LEVEL=INFO

# Mock AI Provider Mode
# Options: success | schema_violation | timeout | transient_error
# Only used when AI_PROVIDER=mock
# - success: Returns valid JSON matching schema (default)
# - schema_violation: Drops required key to test retry logic
# - timeout: Sleeps beyond configured timeout
# - transient_error: Fails once, succeeds on retry (tests backoff)
MOCK_AI_MODE=success

# Mock AI Random Seed
# Integer seed for deterministic RNG in mock AI provider
# Only used when AI_PROVIDER=mock
# Set to 42 for reproducible test outputs
MOCK_AI_SEED=42
